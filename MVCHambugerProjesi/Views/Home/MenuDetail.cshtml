@model MenuViewModel

@section Scripts {
    <script src="~/js/addToCart.js"></script>
}

<div class="mt-3">
    <div class="row">
        <div class="col-md-8">
            <div class="mt-3">
                <p><small class="text-muted">Menü</small></p>
            </div>
            <div class="card mb-3" style="max-width: 840px;">
                <div class="row g-0 bg-light rounded">

                    <div class="col-md-8">
                        <div class="card-body p-4">
                            <h5 class="card-title text-primary">@Model.Name</h5>
                            <p class="card-text">
                                @Model.Description
                            </p>
                            <p class="card-text card-price"><small class="text-muted">₺@Model.Price</small></p>
                            <button class="btn btn-primary btn-add">Add</button>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img class="card-image img-fluid" width="100%" height="100%" style="object-fit: cover;" src="~/img/@Model.Photo"></img>
                    </div>
                </div>
            </div>


            @if (ViewBag.ExtraItems.Count > 0)
            {
                <div class="mt-3">
                    <p><small class="text-muted mt-3">Yan Lezzetler</small></p>
                </div>

                @foreach (ExtraItemViewModel item in ViewBag.ExtraItems)
                {
                    <div class="card mb-3 mb-5" style="max-width: 840px;">
                        <div class="row g-0 bg-light rounded">
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h5 class="card-title text-primary">@item.Name</h5>

                                    <p class="card-text card-price"><small class="text-muted">₺@item.AdditionalPrice</small></p>
                                    <button class="btn btn-primary btn-add">Add</button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <img class="card-image img-fluid" width="100%" height="100%" style="object-fit: cover;" src=""></img>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>

        <div class="col-md-4 border rounded bg-light mt-5 mb-5 shopping-cart-list">
            <p class="fs-5 mt-3 text-center"><strong>Shopping Card</strong></p>
            <hr>
        </div>
    </div>
</div>
